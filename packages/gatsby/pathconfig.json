{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { 
      "~/src/*": ["./src/*"],
      "~/libs/*": ["./src/libs/*"],
      "~/components": ["./src/components"],
      "~/component-views/*": ["./src/component-views/*"],
      "~/page-views/*": ["./src/page-views/*"],
      "~/static-content/*": ["./static-content/*"],
      "~/styles/*": ["./src/styles/*"],
      "@my-components": ["./packages/my-components/src/components"],

      "~/site-config": ["./src/site-config"],
      "~/langs/*": ["./static-content/langs/*"]
    }
  },
  "babel": {
    "root": ".",
    "alias": {
      "~/src": "./src",
      "~/libs": "./src/libs",
      "~/components": "./src/components",
      "~/component-views": "./src/component-views",
      "~/page-views": "./src/page-views",
      "~/static-content": "./static-content",
      "~/styles": "./src/styles",
      "@my-components": "./packages/my-components/src/components",

      "~/site-config": "./src/site-config",
      "~/langs": "./static-content/langs"
    }
  },
  "jest": {
    "^~/(.*)$": "<rootDir>/src/$1",
    "^@my-components$": "<rootDir>/src//packages/my-components/src/components",

    "~/site-config": "<rootDir>/src/site-config",
    "^~/langs/(.*)$": "<rootDir>/static-content/langs/$1"
  },
  "webpack": {
    "~/src": "/src",
    "~/libs": "/src/libs",
    "~/components": "/src/components",
    "~/component-views": "/src/component-views",
    "~/page-views": "/src/page-views",
    "~/static-content": "/static-content",
    "~/styles": "/src/styles",
    "@my-components": "/packages/my-components/src/components",

    "~/site-config": "/src/site-config",
    "~/langs": "/static-content/langs"
  }
}
